$primary-color = #1a237e

.container
  margin-bottom 15px
  .submitted
    text-align center
    color $primary-color
    display none
  .form
    .form-group, label
      font-family 'Raleway', sans-serif
    .form-group
      .form-control:active, .form-control:focus
        border-color $primary-color
    button
      width 100%

@media only screen and (max-width: 767px)
  .form-group
    .col-md-6
      margin-top 10px
