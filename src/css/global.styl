@import 'helpers.styl'

transitionBackground(time = 500ms)
  transition-vender(background-color time)
purpleToWhite(t = 500ms)
  color #ffffff
  transitionBackground(t)
purpleToWhiteHover(t = 500ms)
  color $primary-color !important
  background-color #ffffff !important
  boxShadow(t)
  transitionBackground(t)

.btn-primary
  cursor pointer
  background-color $primary-color
  border-color $primary-color
  purpleToWhite(200ms)
.btn-primary:hover,
.btn-primary:active,
.btn-primary:focus,
.btn-primary.active,
.btn-primary.focus
  border-color $primary-color
  purpleToWhiteHover(200ms)

html, body
  height 100%
body
  position relative
  margin 0
  min-height 100%
.page
  min-height 90%

.hamburger
  display none
  padding 15px
  text-align center
  cursor pointer
  font-size 1.5em
  purpleToWhite()
.hamburger:hover
  purpleToWhiteHover()
.nav
  .nav-item
    flex-vender(auto)
  .nav-link
    text-align center
    font-family 'Raleway', sans-serif
    purpleToWhite()
  .nav-link:hover
    purpleToWhiteHover()
  .dropdown-menu
    border-radius 0
    margin -0.5px
    background-color $primary-color
    padding 0
    border none
    min-width unset
    max-width unset
    font-family 'Raleway', sans-serif
    .nav-link
      background-color $secondary-color !important
      width inherit
      border-radius 0
      display block
      text-align center
    .nav-link:hover
      background-color #ffffff !important
      color $primary-color !important

@media only screen and (min-width: 768px)
  .nav
    display-flex-vender(true)

@media only screen and (max-width: 767px)
  .hamburger
    display block
  .nav
    display none
    .dropdown-menu
      width 100% !important
      margin-top 0
      position relative
      float none

.footer
    background-image url("images/jali.jpg")
    padding 15px
    width 100%
    .social-media
      text-align right
      .fa
        margin 2px
        text-decoration none

.hamburger,
.nav,
.nav-link,
.footer
  background-color $primary-color

.topview
  text-align center
  border-radius 0
  h1
    font-family 'Cookie', cursive
    font-size 5rem
  span
    font-family 'Raleway', sans-serif
    display block
    margin-top -20px

.hover-img-container
  position relative
  text-align center
  img
    boxShadow();
    width 100%
    height auto
    opacity 1
    transition-vender(opacity 500ms)
  .description
    font-family 'Raleway', sans-serif
    margin-bottom 40px
    visibility hidden
    position absolute
    bottom 0
    left 0
    right 0
    background-color #000
    padding 20px
    color #ffffff
    font-weight bolder
    font-size 1.3rem
    transition-vender(visibility 100ms)
    .credit
      font-style italic
    .credit:before
      content 'Photo Credit: '
      font-size 1.2rem
.hover-img-container:hover .description
  visibility visible
  transition-vender(visibility 500ms)
.hover-img-container:hover img
  opacity .7

transitionParagraph(time = 500ms)
  transition-vender(padding time, border-left time)
.paragraphs
  font-family 'Raleway', sans-serif
  h2
    padding 20px
    background-color $primary-color
    color #fff
  p
    font-size 1.05rem
    border-left none
    padding 0
    transitionParagraph()
  p:hover,
  p:active,
  p:focus
    border-left 1px solid $primary-color
    padding 10px
    transitionParagraph()
