$primary-color = #1a237e
boxShadow()
  box-shadow 0px 1px 5px 0px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.12)

.container
  margin-bottom 32px
  .imgs
    margin-bottom 12px
    display flex
    .last-img,
    .next-img
      text-align center
      width 15%
      a
        cursor pointer
        position relative
        top 50%
        transform translateY(-50%)
    .hover-img-container
      display none
    .current-img
      display block
      width 70%
      min-height 400px
      max-height 400px
      overflow scroll
  .bottom-select
    boxShadow()
    display flex
    margin 0 auto
    overflow scroll
    .bottom-current
      border 1px dotted $primary-color
    .bottom-image
      height 100px
      margin-left 4px
      margin-right 4px
      img
        height 100%
        width auto
    .first-img
      margin-left 0
    .last-img
      margin-right 0
