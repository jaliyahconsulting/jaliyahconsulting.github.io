@media only screen and (max-width: 767px)
  .hover-img-container .description
    display none

screenSize = 150px
imgsHeight = 50px
for _ in (1..41)
  @media only screen and (min-width: screenSize)
    .imgs
      height imgsHeight
  screenSize += 20px
  imgsHeight += 10px
