@import 'helpers.styl'

.header
  text-align center
  margin 20px
  h1
    font-size 6rem
    font-family 'Cookie', cursive
  blockquote
    font-size 1.05rem
    font-family 'Raleway', sans-serif

.carousel
  background-color $primary-color
  height 500px
  // .carousel-control-prev-icon
  //   background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='#000' viewBox='0 0 8 8'%3E%3Cpath d='M4 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important
  // .carousel-control-next-icon
  //   background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='#000' viewBox='0 0 8 8'%3E%3Cpath d='M1.5 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important
  .carousel-slide-changer
    cursor pointer
  .carousel-inner
    height inherit
    .carousel-item
      height inherit
      text-align center
      img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%
        height auto

.container
  margin-bottom 15px
  .wendi
    margin-bottom 15px
    img
      width 100%
      height auto
  .welcome
    margin-bottom 20px
    font-family 'Raleway', sans-serif
    h2
      font-size 2.3rem
    p, span, ul
      font-size 1.12rem

screenSize = 900px
imgsHeight = 500px
for _ in (1..23)
  @media only screen and (max-width: screenSize)
    .carousel
      height imgsHeight
  screenSize -= 20px
  imgsHeight -= 15px
