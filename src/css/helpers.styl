$primary-color = #1a237e
$secondary-color = #2F1B9B

// vender prefixers
flex-vender(n)
  -webkit-box-flex n
  -ms-flex n
  flex n

display-flex-vender(addImportant = false)
  if addImportant
    display -webkit-flex !important
    display -moz-box-flex !important
    display -ms-flexbox! !important
    display flex !important
  else
    display -webkit-flex
    display -moz-box-flex
    display -ms-flexbox
    display flex

transition-vender(args...)
  -webkit-transition unquote(join(', ', args))
  -o-transition unquote(join(', ', args))
  transition unquote(join(', ', args))

transform-vender()
  -webkit-transform arguments
	-moz-transform arguments
	-ms-transform arguments
	-o-transform arguments
	transform arguments

user-select-vender(u)
  -khtml-user-select u
  -o-user-select u
  -moz-user-select u
  -webkit-user-select u
  user-select u

// helper mixins
boxShadow()
  -webkit-box-shadow 0px 1px 5px 0px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.12)
  box-shadow 0px 1px 5px 0px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.12)

transitionBackground(t = 500ms, args...)
  transition-vender(background-color t, args)
transitionParagraph(t = 500ms, args...)
  transition-vender(padding t, border-left t)

toWhite(t = 500ms)
  color #ffffff
  transitionBackground(t, color t)
toWhiteHover(t = 500ms)
  color $primary-color !important
  background-color #ffffff !important
  boxShadow(t)
  transitionBackground(t, color t)

backgroundImage(imgSrc, pos = center)
  background-image url(imgSrc)
  background-repeat no-repeat
  background-position pos
  background-size cover

logoFabrics()
  backgroundImage('images/jaliyah-logo-fabrics-long.png')
