@import 'helpers.styl'

.jumbotron
  backgroundImage('images/wendi-father-1.jpg')

.resources
  margin 0 auto
  margin-bottom 15px
  width 95%
  display-flex-vender()
  .filter
    width 135px
    .btn-primary
      boxShadow()
      width 100%
      margin-bottom 7px
  .selected
    background-color #fff
    color $primary-color
  .content
    width auto
    padding-left 20px
    .card
      boxShadow()
      margin-bottom 15px
      .mediaCol
        background-image url('resources/loading.gif')
        background-position center
        background-repeat no-repeat
        background-size inherit
      .image
        img
          width 100%
      .video
        iframe
          width 100%
          min-height 500px
      .card-title, .card-text
        font-family 'Raleway', sans-serif

@media only screen and (max-width: 767px)
  .resources
    display block
    .filter
      display flex
      position sticky
      position -webkit-sticky
      top 0
      width 100%
      z-index 1
      background-color $primary-color
      .btn
        background-color inherit
        color #fff
        border-radius 0
        border 0
        margin-bottom 0
        box-shadow none
        -webkit-box-shadow none
        padding-top 10px
        padding-bottom 10px
    .content
      padding-left 0
      .card
        .card-text
          margin-top 10px
        .video iframe
          min-height 400px

@media only screen and (max-width: 630px)
  .resources .content
    .card
      .video iframe
        min-height 300px